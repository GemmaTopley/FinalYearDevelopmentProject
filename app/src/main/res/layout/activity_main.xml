<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gameLogo"
        android:layout_width="225dp"
        android:layout_height="221dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@drawable/ecoearth1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1281dp"
        android:layout_height="318dp"
        app:srcCompat="@drawable/rubbishpile"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="582dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="564dp"
        tools:layout_editor_absoluteY="330dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1105dp"
        tools:layout_editor_absoluteY="330dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1020dp"
        android:layout_height="221dp"
        app:srcCompat="@drawable/rubbishremovaltext"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>