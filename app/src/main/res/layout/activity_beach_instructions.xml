<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/messysealevel"
    android:backgroundTint="#BEFFFDE7"
    android:backgroundTintMode="src_over"
    tools:context=".BeachInstructions">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/seagulmascot" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="785dp"
        android:layout_height="273dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/comic_neue_light"
        android:gravity="center_horizontal|center_vertical"
        android:text="Hello my name is Declan and welcome to my beach! Some pesky humans have ruined the landscape by leaving their litter everywhere! Can you help me clean it all up? Press the start button to see the mess and help me clean it up!"
        android:textColor="#29B6F6"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_neue_light"
        android:text="WHAT HAPPENED TO THE BEACH?"
        android:textColor="#29B6F6"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="298dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/comic_neue_light"
        android:text="HOW TO PLAY:"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="875dp"
        android:layout_height="343dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/comic_neue_light"
        android:text="Touch the items that have been left on the beach in order to make a decision on what to do. You need to decide if the item needs to be picked up and if it does with what in order to be safe."
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="315dp"
        android:layout_height="213dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#42A5F5"
        android:fontFamily="@font/comic_neue_light"
        android:onClick="startBtn"
        android:text="GO TO THE BEACH"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>